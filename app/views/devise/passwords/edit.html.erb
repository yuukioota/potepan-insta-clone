<div class="main">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h2 class="logo-img mx-auto"></h2>
        <p class="text-secondary">パスワードの変更をします</p>
      </div>
      <%= form_with scope: resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "新しいパスワード", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "変更する", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <br>

      <p class="devise-link">
        アカウントをお持ちですか？
        <br>
        <%= render "devise/shared/links" %>
      </p>
    </div>
  </div>
</div>

