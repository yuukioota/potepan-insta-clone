<div class="col-md-offset-2 mb-4 edit-profile-wrapper">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="profile-form-wrap">
        
        <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true, method: :patch do |f| %>

          <div class="form-group">
            <%= f.label :current_password, "現在のパスワード" %>
            <%= f.password_field :current_password, autofocus: true, placeholder: "現在のパスワード", class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :password, "新しいパスワード" %>
            <%= f.password_field :password, autofocus: "off", placeholder: "新しいパスワード", class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :password_confirmation, "パスワードの確認" %>
            <%= f.password_field :password_confirmation, autofocus: "off", placeholder: "パスワードの確認", class: "form-control" %>
          </div>
  
          <%= f.submit "変更する", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
