
<%= "フォローしているユーザーはいません。" if @user.following.count  %>
<% @user.following.each do |following| %>
  <%= link_to user_path(following.id), class: "black-color no-text-decoration",title: following.name do %>
    <div class="row mt-5">
      <div class="col-md-2 p-2">
        <%= image_tag avatar_url(following), class: "round-img" %>
      </div>
      <div class="col-md-10 p-2">
        <p><strong><%= following.name %></strong></p>
        <p><%= following.profile_text%></p>
      </div>
    </div>
  <% end %>
<% end %>
  
